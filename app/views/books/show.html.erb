<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.image, class: "book-show" %>
  </div>
  <div class="col-md-8">
    <div class="book-info">
      <h2 class="book-title"><%= @book.title %></h2>
      <h3 class="book-author"><span>From</span> <%= @book.author %></h3>
      <h2 class="avg-rating">Average Rating</h2>
      <p class="book-desc"><%= @book.description %></p>
    </div>
  </div>
</div>

<br><br><br>

<div class="btn-group">
    <%= link_to "Back", root_path, class: "btn btn-default" %>
  <% if user_signed_in? %>
    <% if @book.user_id == current_user.id %>
      <%= link_to "Edit", edit_book_path(@book), class: "btn btn-default" %>
      <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
    <% end %>
  <% end %>
</div>
